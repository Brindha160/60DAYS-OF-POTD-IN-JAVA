import java.util.Arrays;

class Solution {
    public int hIndex(int[] citations) {
        int n = citations.length;
        
        // Step 1: Sort the array
        Arrays.sort(citations);
        
        // Step 2: Traverse and check condition
        for (int i = 0; i < n; i++) {
            int h = n - i;
            if (citations[i] >= h) {
                return h;
            }
        }
        
        // If no valid h found
        return 0;
    }
}
